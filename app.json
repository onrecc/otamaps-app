{
  "expo": {
    "name": "OtaMaps",
    "slug": "otamaps",
    "version": "0.2.1",
    "orientation": "portrait",
    "icon": "./assets/icons/icon.png",
    "scheme": "otamapsapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "newArchEnabled": false,
      "supportsTablet": true,
      "bundleIdentifier": "fi.otamaps.ios",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSLocationWhenInUseUsageDescription": "OtaMaps uses your location to estimate which room you are in using Bluetooth beacons. For example, it shows your approximate room on the school map to help you navigate.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "OtaMaps needs background location access to continuously detect nearby beacons, even when the app is not active. This allows your room location to stay up to date on the school map.",
        "NSBluetoothAlwaysUsageDescription": "OtaMaps uses Bluetooth to detect room-specific BLE beacons placed inside the school. For example, it shows your estimated room location on the school map for indoor navigation.",
        "NSBluetoothPeripheralUsageDescription": "OtaMaps uses Bluetooth to scan for BLE beacons located in specific rooms. These signals help determine your approximate indoor location."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/foreground.png",
        "monochromeImage": "./assets/icons/monochromatic.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "fi.otamaps.app",
      "versionCode": 6,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT"
      ],
      "blockedPermissions": [
        "ACTIVITY_RECOGNITION",
        "android.permission.ACTIVITY_RECOGNITION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "@rnmapbox/maps",
        {
          "RNMapboxMapsDownloadToken": "sk.eyJ1Ijoib25yZWMiLCJhIjoiY21jYmJ3ZTQwMGNzNjJvcG9yNW9zY3MzMyJ9.KUC5868EU0LR_Cq1XkEWtQ"
        }
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.587558103382-esnjsvgl9is8co4ottb5i1p8rdj9drn7"
        }
      ],
      [
        "react-native-ble-plx",
        {
          "isBackgroundEnabled": true,
          "modes": ["peripheral", "central"],
          "bluetoothAlwaysPermission": "Allow $(PRODUCT_NAME) to connect to bluetooth devices"
        }
      ],
      "expo-font",
      "expo-notifications"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "a66a863c-7d69-47e4-ab26-8f79f378847e"
      }
    }
  }
}
